{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "incremental": true,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "@config/*": ["libs/config/src/*"],
      "@database/*": ["libs/database/src/*"],
      "@redis/*": ["libs/redis/src/*"],
      "@queue/*": ["libs/queue/src/*"],
      "@common/*": ["libs/common/src/*"]
    }
  }
}
